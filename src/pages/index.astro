---
import Layout from "../layouts/Layout.astro";
import TimeTable from "../components/TimeTable";
---

<Layout title="Timetable Genrator.">
  <main>
    <div class="fork__ribbon">
      <a href="https://github.com/amalpmathews2003/timetable-prettify">
        <img
          decoding="async"
          loading="lazy"
          width="149"
          height="149"
          src="https://github.blog/wp-content/uploads/2008/12/forkme_left_darkblue_121621.png?resize=149%2C149"
          alt="Fork me on GitHub"
          data-recalc-dims="1"
        />
      </a>
    </div>
    <h1>Timetable generator for NIT Calicut</h1>
    <TimeTable client:load/>
  </main>
</Layout>

<style>
main {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
h1 {
	font-size: 2rem;
	font-weight: 400;
	margin-bottom: 1rem;
}
.fork__ribbon{
	position: absolute;
	top: 0;
	left: 0;
}
@media print {
	h1{
		display: none;
	}
	.fork__ribbon{
		display:none;
	}
}
</style>